mixin button(type, color, text, link, title, _modal, input, _class)
  if type === 'button'
    |
    |
    button(
      class=("dev-btn dev-btn-" + color + " ripple " + _class)
      title=(title ? title : false)
      data-modal-open=(_modal ? _modal : false)
    )= text
    |
    |
  else if type === 'a'
    |
    |
    a(
      href=(link ? link : 'javascript:void(0)')
      class="dev-btn dev-btn-" + color + " ripple"
      title=(title ? title : false)
      data-modal-open=(_modal ? _modal : false)
    )= text
    |
    |
  else if type === 'submit'
    if input
      div(class="dev-btn dev-btn-" + color + " dev-btn-submit ripple")
        |
        |
        input(
          type="submit"
          value="" + text
        )
        |
        |
    else
      |
      |
      button(
        type="submit"
        class="dev-btn dev-btn-" + color + " dev-btn-submit ripple"
      )= text
      |
      |
